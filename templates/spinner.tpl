<div class="spinner">
    <label for="<$= data.id $>"><$= data.label $></label>
    <button type="button" data-delta="-5">-5</button>
    <button type="button" data-delta="-1">-1</button>
    <input id="<$= data.id $>" type="text" size="3" maxlength="3" value="<$= data.value $>">
    <button type="button" data-delta="1">+1</button>
    <button type="button" data-delta="5">+5</button>
</div>
